execute pathogen#infect()

syntax on
filetype plugin indent on

set background=dark
"let g:soloarized_termcolors=256
"colorscheme solarized

filetype plugin indent on

set relativenumber
set tabstop=2
set shiftwidth=2
set expandtab

" scroll more lines
nnoremap <C-e> 10<C-e>
nnoremap <C-y> 10<C-y>

" always show file name
set laststatus=2
set statusline+=%F


command! Vb normal! <C-v>

